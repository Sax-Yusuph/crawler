{
	"buildOnSave": false,
	"compileOnSave": false,
	"compilerOptions": {
		"charset": "utf8",
		"module": "commonjs",
		"target": "es2018",
		"lib": ["es2018", "dom", "es2017", "ES2019", "ES2020", "ES5", "ES6"],
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"esModuleInterop": true,
		"outDir": "functions",
		"noImplicitReturns": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"],
	"typeRoots": ["node_modules/@types"]
}
